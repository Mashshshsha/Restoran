<Window x:Class="_21._106_10_Restoran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_21._106_10_Restoran"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500" MinHeight="400" MinWidth="360">
    <Grid>
        <StackPanel Grid.Row ="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment ="Center">
            <Label x:Name="Hello" Content="Добро пожаловать в &quot;Claude Monet&quot;" FontSize="20" FontFamily="Blackadder ITC"/>
            <StackPanel Orientation="Vertical" Height="210" Margin="5,10,5 ,5">
                <Button x:Name="btn_Order" Content="Заказ" Click="btn_Order_Click" Height="40" />
                <Button x:Name="btn_Dish" Content="Блюда" Height="40"/>
                <Button x:Name="btn_Employee" Content="Сотрудники"  Height="40"/>
                <Button x:Name="btn_Booking" Content="Резервирование"  Height="40" />
                <Button x:Name="btn_Products" Content="Продукты"  Height="40"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
